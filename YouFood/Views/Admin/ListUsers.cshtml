@model List<YouFood.Domain.Model.User>
@{
    ViewBag.Title = "ListUsers";
}

@Html.Partial("_NavBar")

<div class="container">
    
    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-danger">
            <p>Il n'y a aucun utilisateur enregistré dans la base de données.</p>
        </div>
    }
    else
    {
        <table class="table table-striped table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Mot de passe</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Password</td>
                    </tr>
                }    
            </tbody>
        </table>
    }
</div>